generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  session       Session[]
  assets        Asset[]
  expenses      Expense[]
  incomes       Income[]
  accountBalances AccountBalance[]
  createdAt     DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Asset {
  id        String   @id @default(cuid())
  name      String
  coinId    String?
  type         String       // 'stock', 'crypto', 'cash', 'commodity'
  category     String?      // optional kategori lebih detail
  color        String?
  amount    Float?
  buyPrice  Float?
  positionX Float?
  positionY Float?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Analysis {
  id        String   @id @default(cuid())
  content   String
  assets    Json
  userId    String
  createdAt DateTime @default(now())
}

model AccountBalance {
  id        String   @id @default(cuid())
  name      String              // contoh: BCA, Dana, OVO, Cash
  type      String              // 'bank', 'ewallet', 'cash'
  balance   Float   @default(0) // saldo sekarang
  createdAt DateTime @default(now())

  userId    String
  user      User @relation(fields: [userId], references: [id])

  expenses  Expense[]
  incomes   Income[]

  @@index([userId, name, type])
}

model Income {
  id        String   @id @default(cuid())
  title     String
  amount    Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  userId   String
  user     User @relation(fields: [userId], references: [id])

  accountId String
  account   AccountBalance @relation(fields: [accountId], references: [id])
}

model Expense {
  id          String   @id @default(cuid())
  title       String
  amount      Float
  category    String?
  description String?
  photoUrl    String?
  date        DateTime
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  accountId String               // ‚Üê sumber saldo
  account   AccountBalance @relation(fields: [accountId], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}